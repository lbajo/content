<def-group>
  <definition class="compliance" id="file_permissions_sros2_demo" version="1">
    <metadata>
      <title>Proper Permissions User sros2_demo directory</title>
      <affected family="unix">
        <platform>multi_platform_all</platform>
      </affected>
      <description>File permissions should be set correctly for the home directories for all user accounts.</description>
    </metadata>
    <criteria >
      <criterion comment="sros2_demo directory" test_ref="test_file_permissions_sros2_demo" negate="true" />
    </criteria>
  </definition>

  <unix:file_test check="all" check_existence="at_least_one_exists" comment="sros2_demo directory" id="test_file_permissions_sros2_demo" version="1">
    <unix:object object_ref="object_file_permissions_sros2_demo" />
    <unix:state state_ref="state_sros2_demo_wrong_perm" />
  </unix:file_test>

  <unix:file_object comment="sros2_demo directory" id="object_file_permissions_sros2_demo" version="2">
    <unix:behaviors recurse="directories" recurse_direction="down" max_depth="1" recurse_file_system="all" />
    <unix:path operation="equals">/home/ubuntu/sros2_demo</unix:path>
    <unix:filename xsi:nil="true" />
    <filter action="exclude">state_sros2_demo_itself</filter>
    <filter action="include">state_sros2_demo_wrong_perm</filter>
  </unix:file_object>

  <unix:file_state id="state_sros2_demo_itself" version="1">
    <!-- Exclude /home/ubuntu/sros2_demo/ directory itself from the check. Check /home/ubuntu/sros2_demo/* directory only. -->
    <unix:path operation="equals">/home/ubuntu/sros2_demo</unix:path>
  </unix:file_state>

  <unix:file_state id="state_sros2_demo_wrong_perm" version="1" operator="OR">
    <unix:suid datatype="boolean">true</unix:suid>
    <unix:sgid datatype="boolean">true</unix:sgid>
    <unix:sticky datatype="boolean">true</unix:sticky>
    <unix:gwrite datatype="boolean">true</unix:gwrite>
    <unix:oread datatype="boolean">true</unix:oread>
    <unix:owrite datatype="boolean">true</unix:owrite>
    <unix:oexec datatype="boolean">true</unix:oexec>
  </unix:file_state>

</def-group>
